# .env.example — COPY TO apps/api/.env AND FILL IN REAL VALUES

NODE_ENV=development
PORT=3001

# Database (Neon) — Required Phase 0
DATABASE_URL=postgresql://YOUR_USER:YOUR_PASSWORD@ep-xxx-pooler.us-east-2.aws.neon.tech/neondb?sslmode=require
DATABASE_URL_DIRECT=postgresql://YOUR_USER:YOUR_PASSWORD@ep-xxx.us-east-2.aws.neon.tech/neondb?sslmode=require

# Redis (Upstash) — Required Phase 0
REDIS_URL=rediss://default:xxx@xxx.upstash.io:6379
UPSTASH_REDIS_REST_URL=https://xxx.upstash.io
UPSTASH_REDIS_REST_TOKEN=xxx

# Auth (Clerk) — Required Phase 1
CLERK_SECRET_KEY=sk_test_xxx
CLERK_PUBLISHABLE_KEY=pk_test_xxx

# Payments (Stripe) — Required Phase 6
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# File Storage (Cloudflare R2) — Required Phase 3
R2_ACCOUNT_ID=xxx
R2_ACCESS_KEY_ID=xxx
R2_SECRET_ACCESS_KEY=xxx
R2_BUCKET_NAME=dev-uploads

# Push Notifications (OneSignal) — Required Phase 7
ONESIGNAL_APP_ID=xxx
ONESIGNAL_API_KEY=xxx

# Error Tracking (Sentry) — Required Phase 0
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# Application — Required Phase 0
JWT_SECRET=change-me-to-a-random-32-character-string
CORS_ORIGINS=http://localhost:3000,http://localhost:19006
API_URL=http://localhost:3001
